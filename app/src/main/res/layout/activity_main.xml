<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:background="#F44336"
        android:onClick="goToActivity2"
        android:text="Start Scoring" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/personkickingright">

            <TextView
                android:id="@+id/competitor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Competitor 1"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:alpha="0.8"
                android:text="Click on the\nheadfor \ncompetitor 2"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head1"
                android:alpha="0.8"
                android:text="Click on the\nbody for \ncompetitor 2"
                android:textColor="#000000"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/leg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="75dp"
                android:alpha="0.8"
                android:text="Click on the\nleg for \ncompetitor 2"
                android:textColor="#000000"
                android:textStyle="bold"></Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/personkickingleft">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Competitor 2"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/head2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"
                android:alpha="0.8"
                android:text="Click on the\nheadfor \ncompetitor 1"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/head2"
                android:alpha="0.8"
                android:text="Click on the\nbody for \ncompetitor 1"
                android:textColor="#000000"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/leg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="75dp"
                android:alpha="0.8"
                android:text="Click on the\nleg for \ncompetitor 1"
                android:textColor="#000000"
                android:textStyle="bold"></Button>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="40dp"
            android:text="Directions:"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Start timer."
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.Click on the\narea of contact."
            android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.Let App do\n the rest."
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>
